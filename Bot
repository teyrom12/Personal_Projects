import pyautogui
import time
import keyboard

def coordonate():
    print(pyautogui.position())
    time.sleep(0.5)


def cautare_google():
    #
    print("Cautam imaginea pe ecran")
    time.sleep(0.1)
    print(".")
    time.sleep(0.1)
    print(".")
    time.sleep(0.1)
    print(".")
    time.sleep(0.2)
    print(".")
    time.sleep(0.3)
    print(".")
    #
    #
    if pyautogui.locateOnScreen(r'C:\Users\TeyRo\Desktop\Chrome\Cautare.png.png', confidence = 0.7) != None:
        #Daca search google a fost gasit
        #
        #
        print("Imaginea a fost gasita cu succes")
        time.sleep(0.1)
